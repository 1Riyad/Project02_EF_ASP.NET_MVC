@{
    var screenshots = (List<Screenshot>)ViewData["screenshots"];
    var gameDetail = (GameDetail)ViewData["gameDetail"];
}


<style>
    .GameContainer {
        position: relative;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }

    .GameComp {
        @*position: absolute;*@
        display: flex;
        margin: 10px;
    }
    .GameDetail {
        position:absolute;
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, -50%)
    }
</style>
@*<div class="card-group">*@


<div class="card mb-3">

    @*<img class="card-img-top" src="..." alt="Card image cap">*@
    <span style="position:absolute">
        <button href type="button" onclick="location.href='/Games';" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </span>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width:1050px;margin-left:28px;border-radius:7px">
        <div class="carousel-inner" style="top:30px">
            <div class="carousel-item active">
                <img class="d-block w-100" src=@screenshots[0].Image alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=@screenshots[1].Image alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=@screenshots[2].Image alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="card-body">
        <br />
        <p class="card-text"><small>@gameDetail.Description</small></p>
        <p class="card-text">
            <small class="text-muted">
                <span style="color:green"> @gameDetail.Status </span> | Platform:  @gameDetail.Platform  | Developer: @gameDetail.Developer | Release Date : @gameDetail.ReleaseDate
            </small>
        </p>
    </div>
</div>

